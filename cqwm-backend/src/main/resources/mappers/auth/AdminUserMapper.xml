<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kkWithCodex.cqwm.auth.repository.AdminUserMapper">

    <resultMap id="AdminUserResultMap" type="com.kkWithCodex.cqwm.auth.model.AdminUser">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password_hash" property="passwordHash"/>
        <result column="full_name" property="fullName"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="status" property="status"/>
        <result column="last_login_ip" property="lastLoginIp"/>
        <result column="last_login_at" property="lastLoginAt"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="is_deleted" property="deleted"/>
    </resultMap>

    <sql id="BaseColumns">
        id, username, password_hash, full_name, phone, email, status,
        last_login_ip, last_login_at, created_at, updated_at, is_deleted
    </sql>

    <select id="findActiveByUsername" resultMap="AdminUserResultMap">
        SELECT
        <include refid="BaseColumns"/>
        FROM cqwm_admin_user
        WHERE username = #{username}
          AND is_deleted = 0
        LIMIT 1
    </select>

    <update id="updateLoginAudit">
        UPDATE cqwm_admin_user
        SET last_login_ip = #{lastLoginIp},
            last_login_at = #{lastLoginAt},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>
</mapper>
